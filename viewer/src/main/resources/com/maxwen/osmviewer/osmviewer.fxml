<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<BorderPane fx:id="borderPane" xmlns="http://javafx.com/javafx/10.0.2-internal" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.maxwen.osmviewer.MainController">
    <top>
        <HBox fx:id="topPane" alignment="CENTER" maxHeight="80.0">
            <children>
                <Pane HBox.hgrow="ALWAYS"/>
                <HBox fx:id="buttons" alignment="CENTER" minHeight="80.0">
                    <children>
                        <VBox alignment="CENTER" minWidth="800.0">
                            <children>
                                <HBox>
                                    <children>
                                        <Label fx:id="posLabel" alignment="CENTER_LEFT" minWidth="360.0"
                                               HBox.hgrow="ALWAYS">
                                            <font>
                                                <Font name="System Bold" size="28.0"/>
                                            </font>
                                            <HBox.margin>
                                                <Insets left="30.0"/>
                                            </HBox.margin>
                                        </Label>
                                        <Label fx:id="speedLabel" alignment="CENTER_RIGHT" minHeight="40.0"
                                               minWidth="120.0">
                                            <font>
                                                <Font name="System Bold" size="28.0"/>
                                            </font>
                                        </Label>
                                        <Label fx:id="altLabel" alignment="CENTER_RIGHT" minHeight="40.0"
                                               minWidth="120.0">
                                            <font>
                                                <Font name="System Bold" size="28.0"/>
                                            </font>
                                            <HBox.margin>
                                                <Insets right="30.0"/>
                                            </HBox.margin>
                                        </Label>
                                    </children>
                                </HBox>
                                <HBox>
                                    <children>
                                        <Label fx:id="wayLabel" alignment="CENTER_LEFT" minWidth="800.0"
                                               HBox.hgrow="ALWAYS">
                                            <font>
                                                <Font name="System Bold" size="28.0"/>
                                            </font>
                                            <HBox.margin>
                                                <Insets left="30.0"/>
                                            </HBox.margin>
                                        </Label>
                                    </children>
                                </HBox>
                            </children>
                        </VBox>
                    </children>
                </HBox>
                <Pane HBox.hgrow="ALWAYS"/>
            </children>
        </HBox>
        <HBox fx:id="bottomPane" alignment="CENTER" minHeight="100.0">
            <children>
                <Pane HBox.hgrow="ALWAYS"/>
                <HBox fx:id="trackButtons" alignment="CENTER" minHeight="100.0">
                    <children>
                        <Button fx:id="startReplayButton" mnemonicParsing="false">
                            <HBox.margin>
                                <Insets left="10.0" right="5.0"/>
                            </HBox.margin>
                        </Button>
                        <Button fx:id="pauseReplayButton" mnemonicParsing="false">
                            <HBox.margin>
                                <Insets left="5.0" right="5.0"/>
                            </HBox.margin>
                        </Button>
                        <Button fx:id="stepReplayButton" mnemonicParsing="false">
                            <HBox.margin>
                                <Insets left="5.0" right="5.0"/>
                            </HBox.margin>
                        </Button>
                        <Button fx:id="stopReplayButton" mnemonicParsing="false">
                            <HBox.margin>
                                <Insets left="5.0" right="10.0"/>
                            </HBox.margin>
                        </Button>
                    </children>
                </HBox>
                <Pane HBox.hgrow="ALWAYS"/>
            </children>
        </HBox>
        <HBox fx:id="infoPane" alignment="CENTER" minHeight="80.0">
            <children>
                <Pane HBox.hgrow="ALWAYS"/>
                <HBox fx:id="infoBox" alignment="CENTER" minHeight="80.0">
                    <children>
                        <Label fx:id="infoLabel" alignment="CENTER_LEFT" minWidth="400.0" HBox.hgrow="ALWAYS">
                            <font>
                                <Font name="System Bold" size="28.0"/>
                            </font>
                            <HBox.margin>
                                <Insets left="30.0"/>
                            </HBox.margin>
                        </Label>
                        <ProgressBar fx:id="progressBar" minWidth="400.0" HBox.hgrow="ALWAYS">
                            <HBox.margin>
                                <Insets right="30.0"/>
                            </HBox.margin>
                        </ProgressBar>
                    </children>
                </HBox>
                <Pane HBox.hgrow="ALWAYS"/>
            </children>
        </HBox>
        <VBox fx:id="leftPane" alignment="CENTER">
            <children>
                <Pane VBox.vgrow="ALWAYS"/>
                <VBox fx:id="mapButtons" alignment="CENTER_LEFT">
                    <children>
                        <Button fx:id="zoomInButton" mnemonicParsing="false">
                        </Button>
                        <Label fx:id="zoomLabel" alignment="CENTER" minHeight="60.0" text="-">
                            <font>
                                <Font name="System Bold" size="24.0"/>
                            </font>
                        </Label>
                        <Button fx:id="zoomOutButton" mnemonicParsing="false">
                        </Button>
                    </children>
                </VBox>
                <Pane VBox.vgrow="ALWAYS"/>
            </children>
        </VBox>
        <HBox fx:id="rightPane" alignment="CENTER" >
            <children>
                <Pane HBox.hgrow="NEVER"/>
                <VBox fx:id="rightButtons" alignment="CENTER_RIGHT" HBox.hgrow="NEVER">
                    <children>
                        <ToggleButton fx:id="trackModeButton" mnemonicParsing="false">

                        </ToggleButton>
                        <Button fx:id="menuButton" mnemonicParsing="false">

                        </Button>
                        <Button fx:id="searchButton" mnemonicParsing="false">

                        </Button>
                        <Button fx:id="quitButton" mnemonicParsing="false">

                        </Button>

                    </children>
                </VBox>
                <Pane HBox.hgrow="NEVER"/>
            </children>
        </HBox>
    </top>
    <center>
        <Pane fx:id="mainPane" BorderPane.alignment="CENTER"/>
    </center>

    <VBox fx:id="searchContent" alignment="TOP_LEFT" visible="false" style="-fx-background-color: blue;">
        <children>
        </children>
    </VBox>
</BorderPane>

